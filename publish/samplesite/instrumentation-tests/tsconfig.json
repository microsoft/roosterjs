{
  "compilerOptions": {
    "jsx": "react",
    "target": "es5",
    "module": "commonjs",
    "sourceMap": true,
    "declaration": true,
    "removeComments": false,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "preserveConstEnums": true,
    "rootDir": "../../../../",
    "baseUrl": ".",
    "paths": {
      "*": [
        "*",
        "dist/*"
      ]
    },
    "lib": [
      "es6",
      "dom"
    ],
    "types": [
      "jest",
      "node"
    ],
  },
  "includeFiles": ["./typings/globals.d.ts"]
}