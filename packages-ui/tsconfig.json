{
    "compilerOptions": {
        "strict": true,
        "jsx": "react",
        "target": "es5",
        "module": "commonjs",
        "outDir": "../dist",
        "sourceMap": true,
        "inlineSources": true,
        "declaration": true,
        "removeComments": false,
        "noImplicitAny": true,
        "preserveConstEnums": true,
        "noUnusedLocals": true,
        "baseUrl": ".",
        "paths": {
            "*": ["*", "../dist/*"]
        },
        "rootDir": ".",
        "lib": ["es6", "dom"]
    },
    "include": ["**/*.ts", "**/*.tsx"]
}
